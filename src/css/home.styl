html, body, div, span, applet, object, iframe,
h1, h2, h3, h4, h5, h6, p, blockquote, pre,
a, abbr, acronym, address, big, cite, code,
del, dfn, em, img, ins, kbd, q, s, samp,
small, strike, strong, sub, sup, tt, var,
b, u, i, center,
dl, dt, dd, ol, ul, li,
fieldset, form, label, legend,
table, caption, tbody, tfoot, thead, tr, th, td,
article, aside, canvas, details, embed,
figure, figcaption, footer, header, hgroup,
menu, nav, output, ruby, section, summary,
time, mark, audio, video {
	margin: 0;
	padding: 0;
	border: 0;
	font-size: 100%;
	font: inherit;
	vertical-align: baseline;
}
/* HTML5 display-role reset for older browsers */
article, aside, details, figcaption, figure,
footer, header, hgroup, menu, nav, section {
	display: block;
}
body {
	line-height: 1;
}
ol, ul {
	list-style: none;
}
blockquote, q {
	quotes: none;
}
blockquote:before, blockquote:after,
q:before, q:after {
	content: '';
	content: none;
}
table {
	border-collapse: collapse;
	border-spacing: 0;
}
/* ^ Reset ^ */




$navy = #021421
$offwhite = #f2f2f2
/* ^ Colors ^ */


$lg = "(min-width: 1100px) and (max-width: 1300px)"
$md = "(min-width: 768px) and (max-width: 1099px)"
$sm = "(max-width: 767px)"
/* ^ Media Quries ^ */
$large-width = 325rem


p, a, h2
	font-size: 5rem
p
	font-weight: 300
	line-height: 6rem
a, h1, h2, h3, h4, h5, h6, li
	font-weight: 600
/* ^ Font Sizes/Weights ^ */


p, h1, h2, h3, h4, h5, h6, li, a
	-webkit-font-smoothing: antialiased
	-moz-osx-font-smoothing: grayscale
a
	cursor: pointer



html
	box-sizing: border-box
	font-size: 4px
	font-family: 'Montserrat'
	color: $navy
*, *:before, *:after
	box-sizing: inherit
body
	background: $offwhite
	position: absolute
	width: 100%




.header
	background: $navy
	display: flex
	height: 75vh
	justify-content: space-around
	padding: 12rem
	width: 100%
	@media (min-width: 1100px)
		height: 240rem
	@media $md
		height: 200rem
	&__hero-logo
		align-self: center
		img
			mask: url('../images/svg/home_logo.svg') center / contain no-repeat
			max-width: 100%
	&__menu
		display: flex
		flex-direction: column
		position: absolute
		right: 12rem
		top: 12rem
		& li
			margin-bottom: 4rem
			& a
				color: $offwhite
				opacity: .75
				text-decoration: none
				&:hover
					border-bottom: 1px solid $offwhite
					opacity: 1
			& span
				color: $offwhite
				cursor: pointer
				font-size: 5rem
				opacity: .75
				text-decoration: none
		&__work
			&--hide
				& li
					display: none
			&--show
				& li
					display: block


.grid
	display: grid
	grid-template-columns: 1fr
	grid-row-gap: 18rem
	margin: 0 auto
	max-width: $large-width
	padding: 14rem 7rem
	& > div
		display: grid
		grid-column: 1 / span all
		& > div
			display: grid
			padding-top: 7rem
		& h2
			border-bottom: 2px solid
			border-image: linear-gradient(to right, $navy, $offwhite) 1 50
			padding-bottom: 1rem
			grid-column: 1 / span all

		& .about-me
			&__info
				grid-column-gap: 5rem
				grid-template-columns: minmax(380px, 3fr) 5fr
				margin-bottom: 0
				& img
					grid-column: 1 / span 1
					border-radius: 2rem
					max-width: 100%
				& p
					grid-column: 2 /span 1
				@media $sm
					grid-row-gap: 5rem
					grid-template-columns: 1fr
					grid-template-rows: repeat(auto-fit, 1fr 1fr)
					& img
						grid-column: 1/ span 1
						grid-row: 2 / span 1
						border-radius: 2rem
						justify-self: center
						max-width: 100%
					& p
						grid-column: 1/ span 1
						grid-row: 1 /span 1
				@media $md
					grid-row-gap: 7rem
					grid-template-columns: 1fr
					grid-template-rows: repeat(auto-fit, 1fr 1fr)
					& img
						grid-column: 1/ span 1
						grid-row: 2 / span 1
						border-radius: 2rem
						justify-self: center
						max-width: 100%
					& p
						grid-column: 1/ span 1
						grid-row: 1 /span 1

		& .work
			grid-column: 1 /  span all
			&__logos
				display: grid
				grid-column-gap: 3rem
				grid-template-columns: repeat(auto-fill, minmax(300px, 1fr))
				grid-template-rows: repeat(auto-fit, 1fr)
				justify-items: center
				max-height: 230px
				& a
					max-width: 100%
					padding: 4rem
					max-height: 200px
					& svg
						width: 100%
					& .hln
						max-width: 50rem
				@media (min-width: 995px) and (max-width: 1306px)
					max-height: 430px
					& a
						&:last-child
							grid-column: 1 /span all
				@media (min-width: 683px) and (max-width: 994px)
					max-height: 430px
				@media (max-width: 682px)
					max-height: 830px

footer
	background: $navy
	bottom: 0
	// display: block
	padding: 7rem
	position: relative
	width: 100%
	& .footer-content
		align-items: center
		display: flex
		flex-direction: row
		justify-content: space-between
		margin: 0 auto
		max-width: 1300px
		width: 100%
		& svg
			width: 15rem
			fill: $offwhite
		& ul
			display: flex
			flex-direction: row
			& li:last-child
				margin-left: 5rem
			& a
				color: $offwhite
				opacity: .75
				text-decoration: none
				&:hover
					border-bottom: 1px solid $offwhite
					opacity: 1
